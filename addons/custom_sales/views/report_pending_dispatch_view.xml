<odoo>
    <record id="view_report_pending_dispatch_search" model="ir.ui.view">
        <field name="name">report.pending.dispatch.search</field>
        <field name="model">report.pending.dispatch</field>
        <field name="arch" type="xml">
            <search string="Pendientes por despachar">
                <field name="partner_id" filter_domain="[('partner_id.name', 'ilike', self)]" string="Buscar por cliente"/>
                <field name="product_id" filter_domain="[('product_id.display_name', 'ilike', self)]" string="Buscar por producto"/>
                <field name="sale_order_id" filter_domain="[('sale_order_id.name', 'ilike', self)]" string="Buscar por orden"/>
                <field name="invoice_id" filter_domain="[('invoice_id.name', 'ilike', self)]" string="Buscar por factura"/>
            </search>
        </field>
    </record>

    <record id="view_report_pending_dispatch_list" model="ir.ui.view">
        <field name="name">report.pending.dispatch.list</field>
        <field name="model">report.pending.dispatch</field>
        <field name="arch" type="xml">
            <list string="Reporte de espera por despachar" create="false" edit="false" delete="false">
                <field name="product_id"/>
                <field name="partner_id"/>
                <field name="sale_order_id"
                       widget="many2one" 
                       options="{'no_create': True}" 
                       context="{'form_view_ref': 'sale.view_order_form'}"
                />
                <field name="invoice_id"
                       widget="many2one" 
                       options="{'no_create': True}" 
                       context="{'form_view_ref': 'account.view_move_form'}"/>
                <field name="invoice_date"/>
                <field name="quantity"/>
            </list>
        </field>
    </record>

    <record id="action_report_pending_dispatch" model="ir.actions.act_window">
        <field name="name">Reporte de espera por despachar</field>
        <field name="res_model">report.pending.dispatch</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_report_pending_dispatch_list"/>
    </record>

    <menuitem
        id="menu_report_pending_dispatch"
        name="Reporte de espera por despachar"
        parent="sale.menu_sale_report"
        action="action_report_pending_dispatch"
        sequence="30"
    />
</odoo>
